# Core API Keys
OPENAI_API_KEY=
# Token for Instagram Webhook verification
INSTAGRAM_VERIFY_TOKEN=
# Access Token for Instagram Graph API
INSTAGRAM_ACCESS_TOKEN=

# Optional: NocoDB Integration
NOCODB_API_TOKEN=
NOCODB_TABLE_URL=

# App Configuration
# Default: v25.0
INSTAGRAM_API_VERSION=v25.0
# Default: gpt-4o-mini
AGENT_MODEL=gpt-4o-mini
AGENT_NAME=Assistente_Instagram

# Audio / Voice Configuration
AUDIO_TRANSCRIPTION_MODEL=gpt-4o-mini-transcribe
AUDIO_REPLY_MODEL=gpt-4o-mini-tts
AUDIO_REPLY_VOICE=alloy
# Must be HTTPS public URL for Instagram to play audio
PUBLIC_BASE_URL=
ENABLE_INSTAGRAM_AUDIO_REPLY=false

# Limits
MAX_TRANSCRIPTION_AUDIO_MB=10
MAX_TRANSCRIPTION_AUDIO_SECONDS=45
MAX_AGENT_INPUT_CHARS=700
MAX_AUDIO_REPLY_CHARS=85

# Infrastructure
# Default: redis://redis:6379/0 (for local docker-compose)
# For Easypanel/Production: redis://user:password@host:port/0
REDIS_URL=redis://redis:6379/0

# Deployment
PORT=8000
LOG_LEVEL=info
